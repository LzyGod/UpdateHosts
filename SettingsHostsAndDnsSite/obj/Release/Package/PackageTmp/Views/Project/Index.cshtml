@model IEnumerable<Models.t_Hosts>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
    <script src="~/Scripts/jquery-1.9.0.min.js"></script>
    <link href="~/Content/layui/css/layui.css" rel="stylesheet" />
    <script src="~/Content/layui/layui.js"></script>
    <script src="~/Scripts/tools.js"></script>
</head>
<body>
    <div style="padding:10px;width:800px;">
        <p>
            <button class="layui-btn  layui-btn-primary" onclick="document.location.href = '/Project/Create';"><i class="layui-icon">&#xe608;</i> 添加项目</button>
        </p>
        <table class="layui-table">
            <tr>
                <th>
                    IP地址
                </th>
                <th>
                   域名
                </th>
                <th>
                    操作
                </th>
            </tr>

            @foreach (var item in Model)
            {
                <tr id="Project_@item.Id">
                    <td>
                        @Html.DisplayFor(modelItem => item.ipAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DomainName)
                    </td>
                    <td>
                        <a class="layui-btn layui-btn-primary layui-btn-small" href="/Project/Edit?pid=@item.Id">
                            <i class="layui-icon">&#xe642;</i>编辑
                        </a>
                        <button class="layui-btn layui-btn-primary layui-btn-small" data-Id="@item.Id" onclick="tools.Del(@item.Id, 'Project_', siteUrl.DelProject)">
                            <i class="layui-icon">&#xe640;</i>删除
                        </button>
                    </td>
                </tr>
            }
        </table>
    </div>
    <script>
        layui.use(['form'], function () {
            var form = layui.form()
                , layer = layui.layer;

        });
    </script>
</body>
</html>
